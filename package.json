{
  "name": "slidex-web",
  "version": "1.2.0",
  "description": "Plataforma Web de Mala Direta Profissional para PowerPoint e Word com IA",
  "type": "module",
  "main": "main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:start": "npm run build && electron .",
    "electron:dev": "vite --mode development & wait-on http://localhost:3000 && electron .",
    "electron:build": "npm run build && electron-builder --win"
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "lucide-react": "^0.473.0",
    "xlsx": "^0.18.5",
    "jszip": "^3.10.1",
    "idb": "^8.0.0",
    "jspdf": "^2.5.1",
    "jspdf-autotable": "^3.8.2",
    "@google/genai": "^1.3.0",
    "electron": "^31.0.0",
    "electron-builder": "^24.13.5",
    "wait-on": "^7.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.4",
    "vite": "^5.4.11"
  },
  "build": {
    "appId": "com.slidex.app",
    "productName": "Slidex Desktop",
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    }
  }
}